<%= link_to '< Back', admin_uploads_path %>
<%= form_for [:admin, @upload], :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <% if @upload %>
      <%= image_tag @upload.upload.normal.url class: "img-med" %>
    <% end %>
    <%= f.file_field :upload %>
    <%= f.hidden_field :upload_cache %>
  </p>
  <p><%= f.submit %></p>
  
<% end %>

<%= link_to '< Back', admin_uploads_path %>