<%= link_to '< Back', admin_categories_path %>

<%= form_for [:admin, @category] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <% if @category.id %>
  <div class="checkbox">
    <label for="category_public">
    <%= f.check_box :public %> Make this Category public?
  </label>
  </div>
  <% end %>
  
  <p><%= f.submit class: "btn btn-primary" %></p>
<%end%>
