<div id="CategoriesIndex">

  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% categories.each do |category| %>
      <tr>
        <td><h2><%= link_to category.name, edit_admin_category_path(category) %> </h2></td>
        <td><p><%= link_to "edit", edit_admin_category_path(category) %> </p></td>
        <td><p><%= link_to "archive", archive_admin_category_path(category), remote: true %></p></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>