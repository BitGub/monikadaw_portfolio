<!DOCTYPE html>
<html>
<head>
  <title>MonikadawPortfolio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Monika Daw", '#', id: "logo" %>
        <% if logged_in? %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Categories", admin_categories_path %></li>
            <li><%= link_to "Projects", admin_projects_path %></li>
            <li><%= link_to "Uploads", admin_uploads_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
               Account <b class="caret"></b>
               </a>
               <ul class="dropdown-menu">
                 <li><%= link_to "Settings", edit_admin_user_path(current_user) %></li>
                 <li class="divider"></li>
                 <li>
                   <%= link_to "Log out", logout_path, method: "delete" %>
                 </li>
               </ul>
             </li>
          </ul>
        </nav>
        <% else %>
        <% end %>
      </div>
    </header>
      <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
</body>
</html>
