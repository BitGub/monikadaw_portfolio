<%= link_to '< Back', uploads_path %>
<%= form_for @upload, :html => {:multipart => true} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= image_tag @upload.upload.url %>
    <%= f.file_field :upload %>
  </p>
  <p><%= f.submit %></p>
  
<% end %>

<%= link_to '< Back', uploads_path %>