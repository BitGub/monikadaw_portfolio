<%= link_to '< Back', categories_path %>

<%= form_for @category do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <p><%= f.submit %></p>
<%end%>

  <%= link_to 'Delete', category_path(@category), :method => 'delete', :data => {:confirm => 'Are you sure?'}%>
